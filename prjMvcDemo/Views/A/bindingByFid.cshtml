
@model prjMvcDemo.Models.CCustomer
@{
    ViewBag.Title = "showByFid";
    string photo = "anonymous.jpg";
    if (Model != null)
    {
        photo = Model.fId + ".jpg";
    }
}

<h2>繫結物件範例</h2>
<p>
    <img src="~/images/@photo" width="200" height="180" />
</p>
@{
    if (Model != null)
    {
        <h3>@Model.fName</h3>
        <p>@Model.fPhone</p>
    }
    else
    {
        <h3>沒有符合條件的資料</h3>
    }
}